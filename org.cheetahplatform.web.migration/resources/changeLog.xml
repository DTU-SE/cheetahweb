			<column name="synchronized_from" type="BIGINT(20) UNSIGNED"
				defaultValue="NULL" />
		</addColumn>
		<addColumn tableName="process_instance">
			<column name="synchronized_from" type="BIGINT(20) UNSIGNED"
				defaultValue="NULL" />
		</addColumn>
		<addColumn tableName="audittrail_entry">
			<column name="synchronized_from" type="BIGINT(20) UNSIGNED"
